{
    "name": "jtx/sorted-linked-list",
    "description": "A simple sorted linked list implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "James Taylor",
            "email": "jtx@jtxmail.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Jtx\\SortedLinkedList\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jtx\\SortedLinkedList\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    }
}